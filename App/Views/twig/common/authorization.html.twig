{% extends "base.html.twig" %}

{% block title %}Авторизация{% endblock %}

{% block content %}
    <div class="card" style="width: 24rem; margin: 0 auto;">
        <div class="card-header"><b>Авторизация</b></div>
        <div class="card-body" style="padding: 20px 30px;">
            <form class="needs-validation" action="{{ index_file }}?action=validate" method="post" novalidate>
                <div class="form-group">
                    <label for="validationUsername">Введите имя пользователя</label>
                    <input type="text" name="name" class="form-control" id="validationUsername" placeholder="Имя пользователя" required>
                    <div class="invalid-feedback">Введите имя пользователя</div>
                </div>
                <div class="form-group">
                    <label for="validationPassword">Введите пароль</label>
                    <input type="password" name="pass" class="form-control" id="validationPassword" placeholder="Пароль" required>
                    <div class="invalid-feedback">Введите пароль</div>
                </div>
                <div class="invalid">
                    {% if errorMsg %}
                        <div class="alert alert-danger">{{ errorMsg }}</div>
                    {% endif %}
                </div>
                <button class="btn btn-primary" type="submit">Войти</button>
            </form>
        </div>
    </div>
{% endblock %}